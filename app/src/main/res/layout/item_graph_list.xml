<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/item_graph_header" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <io.github.coffeegerm.materiallogbook.utils.AvenirRegularTextView
                android:id="@+id/graph_item_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:textSize="20sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <io.github.coffeegerm.materiallogbook.utils.AvenirRegularMedium
                android:id="@+id/graph_item_glucose_level_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/graph_item_glucose_label"
                android:textSize="22sp" />

            <io.github.coffeegerm.materiallogbook.utils.AvenirRegularTextView
                android:id="@+id/graph_item_glucose_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/graph_item_glucose_level_tv"
                android:layout_alignBottom="@+id/graph_item_glucose_level_tv"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                android:alpha="0.8"
                android:text="@string/blood_glucose_measurement"
                android:textSize="16sp" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>