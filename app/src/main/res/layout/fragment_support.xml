<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  
  <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="24dp"
    android:contentDescription="Application Icon"
    android:foregroundGravity="center_horizontal"
    android:src="@drawable/ic_launcher" />
  
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="16dp"
    android:fontFamily="@font/avenir_regular"
    android:gravity="center"
    android:text="@string/support_development_desc"
    android:textSize="16sp" />
  
  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp">
    
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/avenir_bold"
        android:text="@string/support"
        android:textSize="16sp" />
      
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/avenir_demi_bold"
        android:text="@string/coffee"
        android:textSize="16sp" />
      
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal">
        
        <TextView
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:text="@string/coffee_donation_description" />
        
        <View
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_weight="1" />
        
        <TextView
          android:id="@+id/donate_coffee"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:fontFamily="@font/avenir_bold"
          android:text="@string/coffee_donation_price" />
      
      </LinearLayout>
      
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/avenir_demi_bold"
        android:text="@string/pizza"
        android:textSize="16sp" />
      
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal">
        
        <TextView
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:text="@string/pizza_donation_description" />
        
        <View
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_weight="1" />
        
        <TextView
          android:id="@+id/donate_pizza"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:fontFamily="@font/avenir_bold"
          android:text="@string/pizza_donation_price" />
      
      </LinearLayout>
      
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/avenir_demi_bold"
        android:text="@string/dinner"
        android:textSize="16sp" />
      
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal">
        
        <TextView
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:text="@string/dinner_donation_description" />
        
        <View
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_weight="1" />
        
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:fontFamily="@font/avenir_bold"
          android:text="@string/dinner_donation_price" />
      
      </LinearLayout>
    
    </LinearLayout>
  </android.support.v7.widget.CardView>

</LinearLayout>