<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <io.github.coffeegerm.materiallogbook.utils.AvenirRegularMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/tipjar_header"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <io.github.coffeegerm.materiallogbook.utils.AvenirRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/tipjar_description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <io.github.coffeegerm.materiallogbook.utils.AvenirRegularMedium
                android:id="@+id/tipjar_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="@string/no_tipjar"
                android:textColor="@color/colorPrimary" />

            <io.github.coffeegerm.materiallogbook.utils.AvenirRegularMedium
                android:id="@+id/tipjar_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/tipjar_price"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>