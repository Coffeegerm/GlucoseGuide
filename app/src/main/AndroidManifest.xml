<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="io.github.coffeegerm.materiallogbook">

  <uses-permission android:name="android.permission.INTERNET" />

  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

  <application
    android:name=".MaterialLogbook"
    android:allowBackup="true"
    android:fullBackupContent="false"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_circle"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:name="io.github.coffeegerm.materiallogbook.ui.SplashActivity"
      android:screenOrientation="portrait"
      android:theme="@style/SplashTheme">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name="io.github.coffeegerm.materiallogbook.ui.MainActivity"
      android:label="@string/app_name"
      android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />
      </intent-filter>
    </activity>
    <activity android:name="io.github.coffeegerm.materiallogbook.ui.entry.NewEntryActivity" />
    <activity android:name="io.github.coffeegerm.materiallogbook.ui.entry.EditEntryActivity" />
    <activity android:name="io.github.coffeegerm.materiallogbook.ui.settings.children.SettingsTreatmentActivity" />
    <activity android:name="io.github.coffeegerm.materiallogbook.ui.settings.children.SettingsDataActivity" />
    <activity android:name="io.github.coffeegerm.materiallogbook.ui.settings.SettingsActivity" />

    <receiver android:name=".utils.NotificationPublisher" />
  </application>

</manifest>